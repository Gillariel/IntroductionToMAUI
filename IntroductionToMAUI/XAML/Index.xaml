<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IntroductionToMAUI.XAML.Index"
             xmlns:local="clr-namespace:IntroductionToMAUI.XAML">
    <ContentPage.Content>
        <StackLayout
            VerticalOptions="CenterAndExpand">
            <Label Text="Welcome to MAUI using a XAML Shell!"
                VerticalOptions="Center"
                HorizontalOptions="Center" />
            
            <Button Text="Jump to Blazor ?"
                    VerticalOptions="Start"
                    HorizontalOptions="Center"
                    Clicked="LaunchBlazor"
                    Margin="40"/>

            <Button Text="Or in another window ?"
                    VerticalOptions="Start"
                    HorizontalOptions="Center" 
                    Clicked="LaunchBlazorBlank" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>